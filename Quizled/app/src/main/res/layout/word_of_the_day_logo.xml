            app:layout_constraintTop_toTopOf="parent">
        <ImageButton android:layout_width="0dp" android:layout_height="wrap_content"
                     android:src="@mipmap/ic__star_2" android:contentDescription="TODO"
                     android:id="@+id/imageButton" android:layout_marginStart="8dp"
