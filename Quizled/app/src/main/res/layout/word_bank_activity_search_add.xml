<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical">

        <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.SearchView
                    android:layout_width="338dp"

                    android:layout_height="match_parent" layout_width="wrap_content"

                    layout_height="wrap_content" android:id="@+id/filterField">

            </android.support.v7.widget.SearchView>
            <ImageButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:src="@mipmap/ic_sort_3"
                         android:scaleType="centerCrop"
                         android:background="@mipmap/ic_sort_3"
                         android:id="@+id/sortButton"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/sourceWord" android:layout_weight="1" android:hint="original "/>
            <EditText
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/translationWord" android:layout_weight="1" android:hint="translation "/>
            <Button
                    android:text="ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/addWordButton" android:layout_weight="1"/>
        </LinearLayout>

</LinearLayout>